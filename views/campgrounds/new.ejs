<% include ../partials/header %>

    <div class="container">
        <h1 style="text-align:center">Create a New Campground</h1>
        <div class="container">
            <div style="width:50%;margin:20px auto">
                <form action="/campgrounds" method="POST" >
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Camp name" name="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" placeholder="price" name="price" min="100" step="50">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Image url" name="image">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Description" name="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary btn-lg btn-block">Submit</button>
                    </div>
                </form>
                 <a href="/campgrounds" style="margin:auto;">Go back</a>
            </div>
        </div>
    </div>
    
    
<% include ../partials/footer %> 